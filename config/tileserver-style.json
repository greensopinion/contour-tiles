{
  "version": 8,
  "name": "Contour Tiles",
  "metadata": {
    "maputnik:license": "https://github.com/maputnik/osm-liberty/blob/gh-pages/LICENSE.md",
    "maputnik:renderer": "mbgljs",
    "openmaptiles:version": "3.x"
  },
  "sources": {
    "contour": {
      "type": "vector",
      "url": "mbtiles://contour.mbtiles"
    },
    "hillshade": {
      "type": "raster",
      "url": "mbtiles://hillshade.mbtiles"
    }
  },
  "sprite": "https://maputnik.github.io/osm-liberty/sprites/osm-liberty",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "contour20",
      "type": "line",
      "source": "contour",
      "source-layer": "contour",
      "filter": ["==", ["%", ["get", "elev"], 20], 0],
      "layout": {"visibility": "visible"},
      "paint": {"line-color": "rgba(118, 94, 29, 1)", "line-width": 0.1}
    },
    {
      "id": "contour100",
      "type": "line",
      "source": "contour",
      "source-layer": "contour",
      "filter": ["==", ["%", ["get", "elev"], 100], 0],
      "layout": {"visibility": "visible"},
      "paint": {
        "line-color": "rgba(118, 94, 29, 1)",
        "line-width": {"stops": [[10, 0.1], [13, 0.4]]}
      }
    },
    {
      "id": "hillshade",
      "type": "raster",
      "source": "hillshade",
      "layout": {"visibility": "visible"},
      "paint": {"raster-opacity": 0.2}
    },
    {
      "id": "contour_label",
      "type": "symbol",
      "source": "contour",
      "source-layer": "contour",
      "filter": ["==", ["%", ["get", "elev"], 100], 0],
      "layout": {
        "text-field": "{elev}",
        "symbol-placement": "line",
        "symbol-spacing": 500,
        "text-size": 10,
        "visibility": "visible",
        "text-font": ["Open Sans Italic"]
      },
      "paint": {
        "text-color": "rgba(118, 94, 29, 1)"
      }
    }
  ],
  "id": "osm-liberty"
}